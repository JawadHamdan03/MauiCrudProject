<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRUD_APP.MainPage">
    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Center">
            <Label Text="User Management" FontSize="32" HorizontalOptions="Center" />
            
            <VerticalStackLayout Spacing="10">
                <Entry x:Name="NameEntry" Placeholder="Enter User Name"/>
                <Button Text="Add User" Clicked="OnAddUserClicked" />
            </VerticalStackLayout>
            
            <CollectionView ItemsSource="{Binding Users}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10" ColumnDefinitions="*,Auto,Auto">
                            <Label Grid.Column="0" Text="{Binding Name}" VerticalOptions="Center"/>
                            <Button Grid.Column="1" Text="Edit" BackgroundColor="Orange" 
                                    TextColor="White" Margin="5,0" CommandParameter="{Binding .}"
                                    Clicked="OnEditUserCilcked"
                                    />
                                    
                            <Button
                                Text="Delete User"
                                Grid.Column="2"
                                BackgroundColor="Red"
                                CommandParameter="{Binding .}"
                                Clicked="OnDeleteUserClicked"
                                />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>